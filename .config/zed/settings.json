// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
    "vim_mode": false,
    "hour_format": "hour24",
    "base_keymap": "JetBrains",
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "git": {
        "enabled": true,
        // "autoFetch": true,
        // "autoFetchInterval": 300,
        // "autoFetchOnFocus": true,
        // "autoFetchOnWindowChange": true,
        // "autoFetchOnBuild": true,
        "git_status": true,
        // "autoFetchOnBuildEvents": ["build", "run", "debug"],
        // "autoFetchOnBuildEventsDelay": 1500,
        // "autoFetchOnBuildDelay": 1500,
        "git_gutter": "tracked_files"
    },
    "task": {
        "show_status_indicator": false
    },
    "panel": "right",
    "ui_font_size": 16,
    "buffer_font_size": 16,
    "theme": "Ayu Dark",
    "cursor_blink": true,
    "buffer_font_family": "Fira Code",
    "ui_font_family": "Fira Code",
    "hover_popover_enabled": true,
    "show_copilot_suggestions": true,
    "format_on_save": "on",
    "notification_panel": {
        "button": false
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false
    },
    "scrollbar": {
        "show": "auto",
        "cursors": true,
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true,
        "diagnostics": true
    },
    "project_panel": {
        "dock": "right"
    },
    "when_closing_with_no_tabs": "keep_window_open",
    "terminal": {
        "alternate_scroll": "off",
        "blinking": "terminal_controlled",
        "copy_on_select": true,
        "dock": "bottom",
        "default_width": 200,
        "line_height": {
            "custom": 1.0
        }
    },
    "chat_panel": {
        "button": false
    },
    "languages": {
        "Ruby": {
            "language_servers": [
                "solargraph",
                "rubocop",
                "!ruby-lsp",
                "..."
            ]
        }
    },
    "lsp": {
        "solargraph": {
            "binary": {
                "path": "<path_to_your_project>/bin/solargraph"
            }
        }
    },
    "assistant": {
        "version": "2",
        "default_open_ai_model": null,
        "default_model": {
            "provider": "openai",
            "model": "gpt-4o"
        }
    },
    "tabs": {
        "close_position": "right",
        "file_icons": true,
        "git_status": true
    }
}
